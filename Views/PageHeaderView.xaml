<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="YTDownloaderMAUI.Views.PageHeaderView">
    
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="20" >
                
                <Image Source="logo_transparent.png" WidthRequest="70" Aspect="AspectFit" />
                
                <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
                    <Label Text="YT Downloader" FontSize="22" FontAttributes="Bold" HorizontalTextAlignment="Center" VerticalTextAlignment="End" />
                    <Label Text="Version 3.0.1" HorizontalTextAlignment="Center" FontSize="14" VerticalOptions="End" TextColor="Gray" />
                </VerticalStackLayout>
            
            </HorizontalStackLayout>
            <Label Text="{Binding HeaderText}" FontSize="16" LineBreakMode="WordWrap" HorizontalTextAlignment="Center" />
        </VerticalStackLayout>
    </ScrollView>
</ContentView>
